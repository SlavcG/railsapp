<div class="col-sm-2 col-md-4 boxp">
  <%= image_tag(product.image_url, class: "img-responsive") %>
  <h3><%= product.name %></h3>
  <p><%= product.description %></p>
  <p><%= product.color %></p>
  <p><%= product.price %></p>
  <button class="btn btn-default"><%= link_to 'Show', product %></button>
  <button class="btn btn-default"><%= link_to 'Edit', edit_product_path(product) %></button>
  <button class="btn btn-default"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
</div><!-- /col -->
